<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dark_theme_activity"
    android:background="@drawable/caller_theme_dark">

    <ImageView
        android:id="@+id/imageView_caller_photo_dark"
        android:layout_width="203dp"
        android:layout_height="196dp"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/callerphoto" />

    <TextView
        android:id="@+id/textView_caller_name_dark"
        android:layout_width="159dp"
        android:layout_height="35dp"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:gravity="center"
        android:text="Unknown"
        android:textColor="#FDF6F6"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_caller_photo_dark" />

    <TextView
        android:id="@+id/textView_timer_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="177dp"
        android:layout_marginRight="177dp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="#FAF6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_caller_name_dark" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="272dp"
        android:layout_height="71dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_timer_dark">

        <ImageButton
            android:id="@+id/imagebtn_mic_dark"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:background="#0000"
            android:src="@drawable/ic_baseline_mic_24"
            android:tint="#F6F2F2" />

        <ImageButton
            android:id="@+id/imagebtn_webcam_dark"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#0000"
            android:src="@drawable/ic_baseline_videocam_24"
            android:tint="#F4EEEE" />

        <ImageButton
            android:id="@+id/imgButton_voice_Out_dark"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:background="#0000"
            android:src="@drawable/ic_baseline_record_voice_over_24"
            android:tint="#F3EFEF" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="44dp"
        android:text="關閉麥克風"
        android:textColor="#F4EFEF"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="44dp"
        android:text="開始視訊"
        android:textColor="#F4EFEF"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="272dp"
        android:layout_marginRight="272dp"
        android:text="開啟擴音"
        android:textColor="#F4EFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <ImageButton
        android:id="@+id/imgButton_cancelcall_dark"
        android:layout_width="95dp"
        android:layout_height="96dp"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape_circle_red"
        android:src="@drawable/ic_baseline_phone_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</androidx.constraintlayout.widget.ConstraintLayout>