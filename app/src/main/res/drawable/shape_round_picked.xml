<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    //這裡是Linearlayout佈局的背景顏色
    <solid android:color="#FFFFFF" />
    //這裡是設定邊框線的粗細和顏色
    <stroke
        android:width="10dp"
        android:color="#5CBD60" />

    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    //角的話，裡邊有引數可以單獨設定
    <corners android:radius="10dp" />

</shape>